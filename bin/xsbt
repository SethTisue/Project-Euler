#!/bin/sh

LAUNCH=`dirname $0`/sbt-launch-0.12.0-Beta2.jar
URL='http://repo.typesafe.com/typesafe/ivy-releases/org.scala-sbt/sbt-launch/0.12.0-Beta2/sbt-launch.jar'

if [ ! -f $LAUNCH ] ; then
  curl -f $URL -o $LAUNCH || exit
fi

java \
  -Xmx1536M \
  -XX:MaxPermSize=256m \
  $JAVA_OPTS \
  -classpath $LAUNCH \
  xsbt.boot.Boot "$@"
