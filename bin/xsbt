#!/bin/sh

LAUNCH=`dirname $0`/sbt-launch-0.11.1.jar
URL='http://repo.typesafe.com/typesafe/ivy-releases/org.scala-tools.sbt/sbt-launch/0.11.1/sbt-launch.jar'

if [ ! -f $LAUNCH ] ; then
  curl -f $URL -o $LAUNCH || exit
fi

java \
  -Xmx1536M \
  -XX:MaxPermSize=128M \
  $JAVA_OPTS \
  -classpath $LAUNCH \
  xsbt.boot.Boot "$@"
